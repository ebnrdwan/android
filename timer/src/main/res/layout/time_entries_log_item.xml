<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_view"
    android:background="@color/background"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="@dimen/time_entry_log_item_height"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:layout_width="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/description"
        tools:visibility="visible"
        android:maxLines="1"
        android:textSize="15sp"
        android:gravity="start"
        android:textColor="@color/text_on_surface"
        tools:text="Exporting assets to Zeplin and organizing"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:layout_constraintBottom_toTopOf="@+id/add_description_label"
        app:layout_constraintEnd_toEndOf="@+id/duration_gradient"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/time_entry_log_side_padding"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/add_description_label"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="15sp"
        android:text="@string/add_description"
        android:textColor="#fefefe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toTopOf="@+id/project_label"
        app:layout_constraintEnd_toEndOf="@+id/duration_gradient"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/time_entry_log_side_padding"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/archived_icon"
        android:src="@drawable/ic_archived"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/project_label"
        app:layout_constraintTop_toTopOf="@+id/project_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/time_entry_log_side_padding"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="12dp" />
    <TextView
        android:id="@+id/project_label"
        android:layout_marginStart="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="15sp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
        app:layout_constraintTop_toBottomOf="@id/add_description_label"
        app:layout_constraintStart_toEndOf="@id/archived_icon"
        app:layout_constraintEnd_toStartOf="@+id/client_label"
        app:layout_goneMarginStart="@dimen/time_entry_log_side_padding"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintHorizontal_bias="0"
        tools:text="A prorporproprorproprorpr"
        tools:visibility="visible"
        tools:textColor="#c56bff" />
    <TextView
        android:id="@+id/client_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="15sp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBaseline_toBaselineOf="@id/project_label"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
        app:layout_constraintTop_toBottomOf="@id/add_description_label"
        app:layout_constraintStart_toEndOf="@id/project_label"
        app:layout_constraintEnd_toEndOf="@+id/duration_gradient"
        tools:text="Project name mfkdsm kdsam fkds mfkfdsafadsafdsa"
        tools:visibility="visible" />
    <View
        android:id="@+id/duration_padding_area"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:layout_width="72dp" />
    <View
        android:id="@+id/duration_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient_transparent_to_background"
        app:layout_constraintEnd_toStartOf="@id/duration_padding_area"
        android:layout_height="0dp"
        android:layout_width="48dp" />
    <TextView
        android:id="@+id/duration"
        tools:text="0:23:01"
        android:maxLines="1"
        android:gravity="end"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/text_on_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/continue_icon"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <ViewStub
        android:id="@+id/billable_icon"
        android:inflatedId="@+id/billable_icon"
        android:layout="@layout/time_entries_log_item_billable_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="@id/duration"
        app:layout_constraintEnd_toStartOf="@id/duration"
        app:layout_constraintBottom_toBottomOf="@id/duration" />
    <ImageView
        android:id="@+id/tags"
        android:src="@drawable/ic_tag"
        android:visibility="gone"
        android:tint="@color/icon"
        app:layout_constraintTop_toTopOf="@id/duration"
        app:layout_constraintEnd_toStartOf="@id/billable_icon"
        app:layout_constraintBottom_toBottomOf="@id/duration"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp" />
    <ImageView
        android:id="@+id/continue_icon"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/error_icon"
        app:layout_constraintTop_toBottomOf="@id/duration"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp" />
    <ImageView
        android:id="@+id/error_icon"
        tools:visibility="gone"
        android:visibility="gone"
        android:src="@drawable/ic_unsyncable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/continue_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />
    <ImageView
        android:id="@+id/needs_sync_icon"
        android:src="@drawable/ic_unsynced"
        app:layout_constraintTop_toTopOf="@id/continue_icon"
        app:layout_constraintEnd_toStartOf="@id/continue_icon"
        android:layout_width="24dp"
        android:visibility="gone"
        android:layout_height="24dp"
        android:layout_marginEnd="2dp" />
    <View
        android:id="@+id/continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="70dp"
        android:layout_height="70dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
